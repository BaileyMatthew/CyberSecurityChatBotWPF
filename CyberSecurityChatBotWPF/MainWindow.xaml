<Window x:Class="CyberSecurityChatBotWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CyberSecurityChatBotWPF"
        mc:Ignorable="d"
        Title="Cybersecurity ChatBot" Height="550" Width="850"
        Background="#1E1E2F"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Chat Display -->
        <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto" Name="ScrollArea" Margin="0,0,0,10">
            <TextBlock x:Name="ChatDisplay"
                       TextWrapping="Wrap"
                       FontSize="15"
                       Foreground="White"
                       Padding="10"
                       FontFamily="Consolas"/>
        </ScrollViewer>

        <!-- Input Area -->
        <DockPanel Grid.Row="1" LastChildFill="True">

            <!-- Start Quiz Button -->
            <Button Content="Start Quiz"
                    Width="100"
                    Height="35"
                    FontSize="14"
                    FontWeight="Bold"
                    Click="StartQuiz_Click"
                    Background="#4CAF50"
                    Foreground="White"
                    BorderThickness="0"
                    Margin="0,0,10,0"
                    DockPanel.Dock="Left"/>

            <!-- User Input Box -->
            <TextBox x:Name="UserInput"
                     Height="35"
                     FontSize="14"
                     Margin="0,0,10,0"
                     VerticalContentAlignment="Center"
                     Padding="8"
                     FontFamily="Segoe UI"
                     Background="#2A2A3C"
                     Foreground="White"
                     BorderBrush="#555"
                     BorderThickness="1"
                     Width="500"
                     DockPanel.Dock="Left"
                     KeyDown="UserInput_KeyDown"/>

            <!-- Send Button -->
            <Button Content="Send"
                    Width="100"
                    Height="35"
                    FontSize="14"
                    FontWeight="Bold"
                    Click="SendButton_Click"
                    Background="#3E8EDE"
                    Foreground="White"
                    BorderThickness="0"
                    Cursor="Hand"
                    HorizontalAlignment="Right"/>
        </DockPanel>
    </Grid>
</Window>
