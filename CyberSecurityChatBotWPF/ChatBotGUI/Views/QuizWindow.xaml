<Window x:Class="CyberSecurityChatBotWPF.Views.QuizWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Cybersecurity Quiz" Height="400" Width="600"
        WindowStartupLocation="CenterScreen"
        Background="#1E1E2F">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock x:Name="QuestionText"
                   Grid.Row="0"
                   TextWrapping="Wrap"
                   FontSize="16"
                   Foreground="White"
                   Margin="0,0,0,10" />

        <ListBox x:Name="AnswerList"
                 Grid.Row="1"
                 FontSize="14"
                 Foreground="White"
                 Background="#2A2A3C"
                 BorderBrush="#444"
                 SelectionMode="Single"
                 Height="160"/>

        <TextBlock x:Name="FeedbackText"
                   Grid.Row="2"
                   FontSize="14"
                   Foreground="LightGreen"
                   TextWrapping="Wrap"
                   Margin="0,10,0,10" />

        <Button Content="Submit Answer"
                Grid.Row="3"
                Height="35"
                Width="150"
                HorizontalAlignment="Center"
                FontWeight="Bold"
                FontSize="14"
                Click="SubmitAnswer_Click"
                Background="#3E8EDE"
                Foreground="White"
                BorderThickness="0"/>
    </Grid>
</Window>
